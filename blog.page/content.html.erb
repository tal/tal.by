<section class="content-column">

  <div class="page-description">
    <h1 class="page-title">All Posts</h1>
    <p class="page-content-description">
      Everything I post about, from sports to programming to business tech.
    </p>
  </div>

  <div class="post-list">
    <% tagged '_blog' do |page| %>
      <a class="post" href="<%= page.href %>">
        <div class="title">
          <%= page.title %>

          <time class="posted-at">
            (<%= page.ts_string_short %>)
          </time>
        </div>

        <% if page.subtitle %>
          <div class="subtitle">
            <%= page.subtitle %>
          </div>
        <% end %>
      </a>
    <% end %>
  </div>
</section>
